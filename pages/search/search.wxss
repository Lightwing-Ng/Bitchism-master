.container {
    font-family: PingFangSC-Ultralight;
    align-items: center;
}

.logo {
    width: 250px;
    height: 70px;
    position: absolute;
    top: 20%;
}

.input-container {
    font-family: PingFangSC-Ultralight;
    font-size: 1.25rem;
    width: auto;
    height: 1.50rem;
    background-color: #fff;
    border-bottom: 0.1rpx solid #0f88eb;
    position: absolute;
    top: 40%;
    left: 10%;
    right: 20%;
}

.button-search {
    line-height: 1.50;
    color: #0f88eb;
    font-size: 1.25rem;
    background: #fff;
    padding: 0 1rem 0 1rem;

    border: 2rpx solid #0f88eb;
    border-radius: 0.5rem;
    position: absolute;
    top: 88%;
    right: 10%;
}

.inputLine {
    width: 80%;
    height: auto;
    border-left: 5rpx solid #0f88eb;
    padding-left: 1rem;
    position: absolute;
    top: 45%;
    left: 10%;
}

.ExchangeLogo {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 80%;
    left: 47%;
}

.LangSelectorFrom {
    font-family: PingFangSC-Ultralight;
    text-align: center;
    width: 30%;
    background-color: #fff;
    border-bottom: 5rpx solid #0f88eb;
    position: absolute;
    top: 80%;
    left: 10%;
}

.LangSelectorTo {
    font-family: PingFangSC-Ultralight;
    text-align: center;
    width: 30%;
    background-color: #fff;
    border-bottom: 5rpx solid #0f88eb;
    position: absolute;
    top: 80%;
    right: 10%;
}

.arrow-down {
    font-family: PingFangSC-Ultralight;
    border-color: #777 transparent transparent;
    border-style: solid;
}

textarea {
    font-family: PingFangSC-Ultralight;
    font-size: 1rem;
    width: 80%;
    height: 200rpx;
}

.ClearIcon {
    position: absolute;
    top: 45%;
    right: 7.5%;
}

#hideData {
    display: none;
}

#showResult {
    height: 100%;
    width: 100%;
    background-color: #f0f0f0;
    border-width: 0 0 1px 0;
    border-style: solid;
    border-color: darkgray;
}

#show {
    width: 100%;
    height: 50px;
    border: 1px solid #eee;
    margin-top: 10px;
    background-color: #f0f0f0;
}
