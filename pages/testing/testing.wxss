.wxSearch {
    position: absolute;
    top: 40px;
    left: 0;
    width: 100%;
    height: 100%;
}

.wxSearchInner {
    background-color: #fff;
    position: absolute;
    top: 5%;
}

.wxSearch-section {
    height: auto;
    background-color: #fff;
    padding: 10px 10px 10px 10px;
}

.wxSearch-pancel {
    display: flex;
    flex-direction: row;
}

.wxSearch-input {
    font-family: PingFangSC-Ultralight;
    font-size: 1rem;
    flex: 8;
    background-color: #fff;
    padding: 10px;
    border-bottom: 1px solid #0f88eb;
    height: 1rem;
}

.wxSearch-button {
    font-family: PingFangSC;
    font-size: 1rem;
    line-height: auto;
    height: auto;
    color: #fff;
    background-color: #0f88eb;
    border-top-left-radius: 0rpx;
    border-bottom-left-radius: 0rpx;
    border-top-right-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
}

.wxSearchTitle {
    font-family: PingFangSC;
    color: #585858;
    display: block;
    padding: 5rpx;
    font-size: 1.25rem;
    text-align: center;
    position: relative;
    top: 10%;
}

.wxSearchMindKeyItem {
    padding: 10px 5px;
    border-bottom: 1px solid #eee;
    display: flex;
    color: cornflowerblue;
}

.wxSearchKeyList {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.wxSearchKeyItem {
    width: auto;
    font-family: PingFangSC-Ultralight;
    font-size: 1rem;
    color: #0f88eb;
    text-align: center;
    border: 1px solid #0f88eb;
    margin: 0.2rem 0.5rem 0.2rem 0.5rem;
    padding: 0rpx 20rpx 0rpx 20rpx;
    border-radius: 5px;
}

.wxSearchHistoryItem {
    padding: 5rpx;
    display: flex;
}

.wxSearchHistoryItemText {
    font-family: PingFangSC-Ultralight;
    font-size: 1rem;
    width: 70%;
    position: relative;
    left: 10%;
}

.wxSearchHistoryItemDel {
    font-family: PingFangSC-Ultralight;
    font-size: 0.85rem;
    color: #eee;
    width: auto;
    height: auto;
    padding: 0 0.5rem 0 0.5rem;
    text-align: center;
    vertical-align: center;
    border: 1px solid #eee;
    border-radius: 10rpx;
    position: relative;
    left: 10%;
}

.wxSearchHistoryEmpty {
    font-family: PingFangSC-Ultralight;
    font-size: 1rem;
    text-align: center;
    height: 50px;
    line-height: 50px;
    position: relative;
}

.wxSearchDeleteAllBtn {
    font-family: PingFangSC-Ultralight;
    font-size: 0.75rem;
    color: #585858;
    height: auto;
    padding: 0.5rem;
    text-align: center;
    vertical-align: center;
}

.logo {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    position: absolute;
    bottom: 5%;
    right: 5%;
}
